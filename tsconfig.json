{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
    	"lib": [ "ES2015" ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
	    "typeRoots": [
	      "node_modules/@types"
	    ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}